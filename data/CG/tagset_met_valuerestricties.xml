<tagset>
    <prefix>chnpos</prefix>
    <mainPoS>
        <pos desc="Adjective">ADJ</pos>
        <pos desc="Adposition">ADP</pos>
        <pos desc="Adverb">ADV</pos>
        <pos desc="Conjunction">CON</pos>
        <pos desc="Interjection">INT</pos>
        <pos desc="Noun">NOU</pos>
        <pos desc="Numeral">NUM</pos>
        <pos desc="Pronoun/determiner">PD</pos>
        <pos desc="Residual">RES</pos>
        <pos desc="Verb">VRB</pos>
    </mainPoS>
    <partitions>
        <feature desc="Adverb type">
            <name>advType</name>
            <values>
                <featureValue desc="Pronominal adverb">
                    <value>pronominal</value>
                    <posForValue>
                        <pos>ADV</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature desc="Finiteness">
            <name>finiteness</name>
            <values>
                <featureValue desc="Finite verb">
                    <value>finite</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Infinitive or gerund">
                    <value>inf/ger</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Participle">
                    <value>part</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature desc="Inflection - categorized in an agnostic way, not neccessarily implying morpheme status">
            <name>inflection</name>
            <values>
                <featureValue desc="No inflection">
                    <value>0</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>INT</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                        <pos>RES</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Inflection -a">
                    <value>a</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>CON</pos>
                        <pos>NOU</pos>
                        <pos>PD</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Inflection -e">
                    <value>e</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>INT</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                        <pos>RES</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Inflection -n">
                    <value>n</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>INT</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                        <pos>RES</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Other values">
                    <value>other</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>INT</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                        <pos>RES</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Inflection -r or -re">
                    <value>r/re</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Inflection -s or -th">
                    <value>s/th</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                        <pos>RES</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Inflection -t">
                    <value>t</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature desc="Verb mood. Only imperative has been distinguished from the indicative; tagging subjunctives turned out to be problematic">
            <name>mood</name>
            <values>
                <featureValue desc="Imperative">
                    <value>imperative</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature desc="Number">
            <name>number</name>
            <values>
                <featureValue desc="Other values">
                    <value>other</value>
                    <posForValue>
                        <pos>ADJ</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Plural">
                    <value>pl</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>NOU</pos>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Singular">
                    <value>sg</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>NOU</pos>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature desc="Person - only tagged for pronoun/determiners">
            <name>person</name>
            <values>
                <featureValue desc="First person">
                    <value>1</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Second person">
                    <value>2</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Third person">
                    <value>3</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature>
            <name>pos</name>
            <values>
                <featureValue>
                    <value>ADJ</value>
                    <posForValue>
                        <pos>ADJ</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>ADP</value>
                    <posForValue>
                        <pos>ADP</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>ADV</value>
                    <posForValue>
                        <pos>ADV</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>CON</value>
                    <posForValue>
                        <pos>CON</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>INT</value>
                    <posForValue>
                        <pos>INT</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>NOU</value>
                    <posForValue>
                        <pos>NOU</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>NUM</value>
                    <posForValue>
                        <pos>NUM</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>PD</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>RES</value>
                    <posForValue>
                        <pos>RES</pos>
                    </posForValue>
                </featureValue>
                <featureValue>
                    <value>VRB</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature desc="Subtype (for pronoun/determiners)">
            <name>subtype</name>
            <values>
                <featureValue desc="Definite">
                    <value>def</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Indefinite">
                    <value>indef</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature desc="Verb tense">
            <name>tense</name>
            <values>
                <featureValue desc="Past tense">
                    <value>past</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Present tense">
                    <value>present</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature  desc="Type: subcategorisation, depending on part of speech">
            <name>type</name>
            <values>
                <featureValue desc="Unspecified">
                    <value>-</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Article">
                    <value>art</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Auxiliary or copula">
                    <value>aux/cop</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Cardinal">
                    <value>cardinal</value>
                    <posForValue>
                        <pos>NUM</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Common noun">
                    <value>common</value>
                    <posForValue>
                        <pos>NOU</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Comparing conjunction (als, dan, gelijk-dat, alsof, ...)">
                    <value>comparison</value>
                    <posForValue>
                        <pos>CON</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Coordinating conjunction">
                    <value>coordinating</value>
                    <posForValue>
                        <pos>CON</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Demonstrative">
                    <value>dem</value>
                    <posForValue>
                        <pos>ADV</pos>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Explicative">
                    <value>explicative</value>
                    <posForValue>
                        <pos>CON</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="General" >
                    <value>general</value>
                    <posForValue>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Indefinite (pronoun/determiner)">
                    <value>indef</value>
                    <posForValue>
                        <pos>ADV</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Interrogative">
                    <value>int</value>
                    <posForValue>
                        <pos>ADV</pos>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue  desc="Interjective (this is useless, omit?)">
                    <value>interjection</value>
                    <posForValue>
                        <pos>INT</pos>
                    </posForValue>
                </featureValue>
                <featureValue  desc="Main verb (not an auxiliary of copula)">
                    <value>main</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Negative">
                    <value>negative</value>
                    <posForValue>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Ordinal">
                    <value>ordinal</value>
                    <posForValue>
                        <pos>NUM</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Other">
                    <value>other</value>
                    <posForValue>
                        <pos>ADP</pos>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                        <pos>RES</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Personal (pronoun/determiner)">
                    <value>pers</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Possessive">
                    <value>poss</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Proper noun">
                    <value>proper</value>
                    <posForValue>
                        <pos>NOU</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Qualitative conjunction 'als' in the sense 'in the quality of'">
                    <value>quality</value>
                    <posForValue>
                        <pos>CON</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Reflective of reciprocal pronoun/determiner">
                    <value>refl/recp</value>
                    <posForValue>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Relative (pronoun/determiner)">
                    <value>rel</value>
                    <posForValue>
                        <pos>ADV</pos>
                        <pos>CON</pos>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Resumptive">
                    <value>resumptive</value>
                    <posForValue>
                        <pos>ADV</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Subordinating conjunction">
                    <value>subordinating</value>
                    <posForValue>
                        <pos>CON</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
        <feature desc="Description of role of token as part of a multi-token word (e.g. a separable verb)">
            <name>wordpart</name>
            <values>
                <featureValue desc="Adpositional part of word">
                    <value>adp</value>
                    <posForValue>
                        <pos>ADV</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Adverbial part of word">
                    <value>adv</value>
                    <posForValue>
                        <pos>ADV</pos>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Unspecified part of word">
                    <value>part</value>
                    <posForValue>
                        <pos>ADJ</pos>
                        <pos>ADP</pos>
                        <pos>CON</pos>
                        <pos>NOU</pos>
                        <pos>NUM</pos>
                        <pos>PD</pos>
                    </posForValue>
                </featureValue>
                <featureValue desc="Verbal part of word">
                    <value>vrb</value>
                    <posForValue>
                        <pos>VRB</pos>
                    </posForValue>
                </featureValue>
            </values>
        </feature>
    </partitions>
    <constraints>
        <constraint>
            <pos>ADJ</pos>
            <features>
                <feature>inflection</feature>
                <feature>number</feature>
                <feature>pos</feature>
                <feature>wordpart</feature>
            </features>
        </constraint>
        <constraint>
            <pos>ADP</pos>
            <features>
                <feature>inflection</feature>
                <feature>pos</feature>
                <feature>type</feature>
                <feature>wordpart</feature>
            </features>
        </constraint>
        <constraint>
            <pos>ADV</pos>
            <features>
                <feature>advType</feature>
                <feature>inflection</feature>
                <feature>pos</feature>
                <feature>type</feature>
                <feature>wordpart</feature>
            </features>
        </constraint>
        <constraint>
            <pos>CON</pos>
            <features>
                <feature>inflection</feature>
                <feature>pos</feature>
                <feature>type</feature>
                <feature>wordpart</feature>
            </features>
        </constraint>
        <constraint>
            <pos>INT</pos>
            <features>
                <feature>inflection</feature>
                <feature>pos</feature>
                <feature>type</feature>
            </features>
        </constraint>
        <constraint>
            <pos>NOU</pos>
            <features>
                <feature>inflection</feature>
                <feature>number</feature>
                <feature>pos</feature>
                <feature>type</feature>
                <feature>wordpart</feature>
            </features>
        </constraint>
        <constraint>
            <pos>NUM</pos>
            <features>
                <feature>inflection</feature>
                <feature>pos</feature>
                <feature>type</feature>
                <feature>wordpart</feature>
            </features>
        </constraint>
        <constraint>
            <pos>PD</pos>
            <features>
                <feature>inflection</feature>
                <feature>number</feature>
                <feature>person</feature>
                <feature>pos</feature>
                <feature>subtype</feature>
                <feature>type</feature>
                <feature>wordpart</feature>
            </features>
        </constraint>
        <constraint>
            <pos>RES</pos>
            <features>
                <feature>inflection</feature>
                <feature>pos</feature>
                <feature>type</feature>
            </features>
        </constraint>
        <constraint>
            <pos>VRB</pos>
            <features>
                <feature>finiteness</feature>
                <feature>inflection</feature>
                <feature>mood</feature>
                <feature>pos</feature>
                <feature>tense</feature>
                <feature>type</feature>
                <feature>wordpart</feature>
            </features>
        </constraint>
    </constraints>
</tagset>
